body
  padding-top 85px
  background-color #fff
  padding-bottom 300px

.container
  max-width 1000px

.cover
  display inline-block

.book
  margin-bottom 25px
  padding 0

.book-text-wrap
  min-width 125px
  padding 5px
  display inline-block
  text-align left
  vertical-align top

.book-thumbnail
  width 90px
  padding 5px
  display inline-block
  text-align center
  vertical-align top
  img
    width 100%
    height 120px

.book-thumbnail:hover
    background-color #dedede

.genre-dropdown
  list-style none

.icon-ratings > div
  display inline-block
  width 20px
  height 20px
  line-height 30px
  margin-left 3px
  background-size 100% auto
  background-image url(/assets/Website-Rating-Icons.png)

.icon-rating-10
    background-position 0 100%

.icon-rating-9
    background-position 0 90%

.icon-rating-8
  background-position 0 80%

.icon-rating-7
  background-position 0 70%

.icon-rating-6
  background-position 0 60%

.icon-rating-5
    background-position 0 50%

.icon-rating-4
  background-position 0 40%

.icon-rating-3
  background-position 0 30%

.icon-rating-2
  background-position 0 20%

.icon-rating-1
  background-position 0 10%

.icon-rating-0
    background-position 0 0%

.searchForm > div
  padding 5px 5px 0 5px
  background-color #eee
  margin-bottom 25px

.searchForm input
    background-color white
    height 42px
    padding 2px 10px

.bookFeedback
  padding-bottom 35px
.bookFeedback p
  margin-top 10px

.toggle-content
  position absolute
  z-index  1000
  float  left
  min-width  160px
  padding  10px 10px
  margin  -22px 0 0
  font-size  14px
  text-align  left
  background-color  #fff
  -webkit-background-clip  padding-box
  background-clip  padding-box
  border  1px solid #ccc
  border  1px solid rgba(0,0,0,.15)
  border-radius  4px
  -webkit-box-shadow  0 6px 12px rgba(0,0,0,.175)
  box-shadow  0 6px 12px rgba(0,0,0,.175)
  display inline-block
  list-style none

.clickable
  cursor pointer